<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <fishy.support.view.HrvRing
        android:id="@+id/hrvRing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:centerValueColor="@color/hrv_text_black"
        app:centerValueSize="20sp"
        app:desTvColor="@color/hrv_text_gray"
        app:desTvOffset="28dp"
        app:desTvSize="18sp"
        app:maxValue="100"
        app:minValue="20"
        app:ringBkgColor="@color/hrv_silver"
        app:ringProgressColor="@color/hrv_green"
        app:ringRadius="100dp"
        app:ringWidth="16dp" />

</LinearLayout>